<% service = LicenseService.new %>
<%= f.input :license, as: :select,
            collection: service.select_all_options,
            selected: f.object.persisted? ? f.object.license : 'http://creativecommons.org/publicdomain/zero/1.0/',
            include_blank: true,
            item_helper: service.method(:include_current_value),
            required: f.object.required?(:license),
            input_html: { class: 'form-control' }
%>